<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp">

    <ImageView
        android:id="@+id/ai_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_counselling"
        app:tint="@color/onPrimaryContainer"
        android:background="@drawable/bg_status_grade"
        android:padding="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/ai_message_card"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ai_message_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="@color/surfaceVariant"
        app:cardElevation="0dp"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintStart_toEndOf="@id/ai_icon"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ai_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/onSurfaceVariant"
            tools:text="Hello! I'm your AI counselor. I'm here to help with academic guidance, study planning, and any concerns you might have." />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/ai_message_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
        android:textColor="@color/onSurfaceVariant"
        app:layout_constraintStart_toStartOf="@id/ai_message_card"
        app:layout_constraintTop_toBottomOf="@id/ai_message_card"
        tools:text="05:24 PM" />

</androidx.constraintlayout.widget.ConstraintLayout>