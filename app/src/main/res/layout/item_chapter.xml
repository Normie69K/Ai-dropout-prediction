<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/outline"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/chapter_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_book"
            android:background="@drawable/bg_status_grade"
            android:padding="8dp"
            app:tint="@color/onPrimaryContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_view_chapter_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/alata"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/onSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/chapter_icon"
            app:layout_constraintTop_toTopOf="@id/chapter_icon"
            tools:text="Introduction to Algorithms" />

        <TextView
            android:id="@+id/text_view_chapter_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/onSurfaceVariant"
            app:layout_constraintStart_toStartOf="@id/text_view_chapter_title"
            app:layout_constraintTop_toBottomOf="@id/text_view_chapter_title"
            tools:text="Chapter 1 ãƒ» 24 pages" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>